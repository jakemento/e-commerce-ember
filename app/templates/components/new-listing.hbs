{{#if addNewListing}}
  <h1> New Listing </h1>
    <div>
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value =name id="name"}}
        </div>

        <div class="form-group">
          <label for="price">Price</label>
          {{input value = price id="price"}}
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          {{input value = description id="description"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL </label>
          {{input value = image id="image"}}
        </div>

        <button {{action 'saveA'}}>save</button>
      </form>
    </div>
    <button {{action 'listingFormHide'}}> Cancel </button>

  {{else}}
  <button {{action 'listingFormShow'}}> New Listing </button>
{{/if}}
